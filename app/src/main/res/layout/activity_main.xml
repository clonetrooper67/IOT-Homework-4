<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/trackPackage"
        android:layout_width="148dp"
        android:layout_height="90dp"
        android:layout_marginStart="131dp"
        android:layout_marginTop="114dp"
        android:layout_marginEnd="132dp"
        android:onClick="trackThePackage"
        android:text="Track Package"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/addPackage"
        android:layout_width="148dp"
        android:layout_height="90dp"
        android:layout_marginStart="131dp"
        android:layout_marginEnd="132dp"
        android:layout_marginBottom="128dp"
        android:text="Add Package"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/trackingNum"
        android:layout_width="146dp"
        android:layout_height="58dp"
        android:layout_marginTop="118dp"
        android:layout_marginBottom="134dp"
        android:ems="10"
        android:hint="Tracking Number"
        android:inputType="number"
        app:layout_constraintBottom_toTopOf="@+id/addPackage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/trackPackage" />

</androidx.constraintlayout.widget.ConstraintLayout>